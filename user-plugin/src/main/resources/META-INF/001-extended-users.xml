<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="heydar.rzayev@intradiem.com" id="001-extended-users-create">

        <createTable tableName="${TABLE_PREFIX}EXTENDED_USERS">
            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="USER_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey constraintName="PK_${TABLE_PREFIX}EXTENDED_USERS" tableName="${TABLE_PREFIX}EXTENDED_USERS" columnNames="ID"/>

    </changeSet>

</databaseChangeLog>
